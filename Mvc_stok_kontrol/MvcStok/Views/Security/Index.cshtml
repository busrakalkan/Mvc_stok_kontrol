@model MvcStok.Models.Entity.tbl_admin
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <link href="~/Content/login-css.css" rel="stylesheet" />

</head>
<body>
    
    <div class="text-center" style="padding: 80px;font-family: 'Varela Round';">
        <div class="logo">GİRİŞ</div>

        <!-- Main Form -->
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="login-form-1">
                <form id="login-form" class="text-left">
                    <div class="login-form-main-message"></div>
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <label for="lg_username" class="sr-only">Username</label>
                                @Html.TextBoxFor(m => m.adminUsername, new { @class = "form-control", placeholder = "kullanıcı adı" })

                            </div>
                            <div class="form-group">
                                <label for="lg_password" class="sr-only">Password</label>
                                @Html.PasswordFor(m => m.adminPassword, new { @class = "form-control", placeholder = "parola" })
                            </div>
                            <div>
                                <img src="@Url.Action("CaptchaImageOlustur","Security")" />
                            </div>
                            <div class="editor-field">
                                <input class="form-control" type="text" name="GuvenlikKodu" id="GuvenlikKodu" value="@ViewBag.GuvenlikKodu" placeholder="kodu giriniz" />
                            </div>

                            @if (ViewBag.Mesaj != null)
                            {
                                <p style="color:red">@ViewBag.Mesaj</p>
                            }
                        </div>

                        <button type="submit" class="login-button"><i class="glyphicon glyphicon-menu-right"></i></button>
                    </div>
                    
                    <div class="etc-login-form">
                        <p>şifremi unuttum! <a href="#">şifre değiştir</a></p>
                        <p>hesabınız yok mu?  <a href="~/Security/Register">üye ol</a></p>
                    </div>
                </form>

            </div>
        }

        <!-- end:Main Form -->
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
